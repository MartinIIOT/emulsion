                </style>
              </object>
            </child>
          </object>
        </child>
        <child>
          <object class="GtkStack" id="main_stack">
            <property name="vexpand">1</property>
            <child>
              <object class="GtkStackPage">
                <property name="name">palbody</property>
                <property name="child">
                  <object class="GtkBox" id="palette_box">

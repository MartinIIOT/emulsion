{
    "app-id" : "io.github.lainsce.EmulsionDevel",
    "runtime" : "org.gnome.Platform",
    "runtime-version" : "master",
    "sdk" : "org.gnome.Sdk",
    "command" : "io.github.lainsce.Emulsion",
    "rename-icon" : "io.github.lainsce.EmulsionDevel",
    "finish-args" : [
        "--filesystem=xdg-run/gvfsd",
        "--socket=wayland",
        "--socket=fallback-x11",
        "--socket=session-bus",
        "--share=ipc",
        "--device=dri"
    ],
    "cleanup" : [
        "/include",
        "/lib/pkgconfig",
        "/man",
        "/share/doc",
        "/share/gtk-doc",
        "/share/man",
        "/share/pkgconfig",
        "/share/vala",
        "*.la",
        "*.a"
    ],
    "modules" : [
    	{
            "name" : "libsass",
            "cleanup" : [
                "*"
            ],
            "sources" : [
                {
                    "type" : "git",
                    "url" : "https://github.com/sass/libsass.git"
                },
                {
                    "type" : "script",
                    "dest-filename" : "autogen.sh",
                    "commands" : [
                        "autoreconf -si"
                    ]
                }
            ]
        },
        {
            "name" : "sassc",
            "cleanup" : [
                "*"
            ],
            "sources" : [
                {
                    "type" : "git",
                    "url" : "https://github.com/sass/sassc.git"
                },
                {
                    "type" : "script",
                    "dest-filename" : "autogen.sh",
                    "commands" : [
                        "autoreconf -si"
                    ]
                }
            ]
        },
        {
            "name" : "libadwaita",
            "buildsystem" : "meson",
            "config-opts" : [
                "-Dvapi=true",
                "-Dexamples=false",
                "-Dtests=false"
            ],
            "sources" : [
                {
                    "type" : "git",
                    "url" : "https://gitlab.gnome.org/GNOME/libadwaita.git",
                    "branch" : "main"
                }
            ]
        },
        {
            "name": "libportal",
            "buildsystem": "meson",
            "builddir": true,
            "config-opts": [
              "-Dgtk_doc=false",
              "-Dbackends=gtk4"
            ],
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/flatpak/libportal"
                }
            ]
        },
        {
            "name" : "emulsion",
            "buildsystem" : "meson",
            "config-opts" : [
                "-Dprofile=development"
            ],
            "sources" : [
                {
                    "type": "git",
                    "url": "https://github.com/lainsce/emulsion",
                    "branch" : "master"
                }
            ]
        }
    ]
}
